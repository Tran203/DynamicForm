@model dynamic
@{
    var form = ViewBag.Form as Form;
}
<h2>@form.Title</h2>
<form asp-action="Submit" asp-route-formId="@form.Id" method="post">
    @foreach (var q in form.Questions.OrderBy(x => x.OrderIndex))
    {
        <div class="mb-3">
            <label>@q.Text @(q.IsRequired ? "<span class='text-danger'>*</span>" : "")</label>

            @if (q.Type == "Text")
            {
                <input type="text" name="answers[@q.Id]" class="form-control" @(q.IsRequired ? "required" : "") />
            }
            else if (q.Type == "Rating")
            {
                <select name="answers[@q.Id]" class="form-control" @(q.IsRequired ? "required" : "")>
                    @for (int i = (q.MinValue ?? 1); i <= (q.MaxValue ?? 5); i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            }
            else if (q.Type == "MultipleChoice" || q.Type == "Dropdown")
            {
                @if (q.Type == "Dropdown")
                {
                    <select name="answers[@q.Id]" class="form-control" @(q.IsRequired ? "required" : "")>
                        <option value="">-- Select --</option>
                        @foreach (var opt in q.Options.OrderBy(o => o.OrderIndex))
                        {
                            <option value="@opt.Id">@opt.Text</option>
                        }
                    </select>
                }
                else
                {
                    foreach (var opt in q.Options.OrderBy(o => o.OrderIndex))
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio"
                                   name="answers[@q.Id]" value="@opt.Id" @(q.IsRequired ? "required" : "") />
                            <label class="form-check-label">@opt.Text</label>
                        </div>
                    }
                }
            }
            else if (q.Type == "Checkbox")
            {
                foreach (var opt in q.Options.OrderBy(o => o.OrderIndex))
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="answers[@q.Id]" value="@opt.Id" />
                        <label class="form-check-label">@opt.Text</label>
                    </div>
                }
            }
        </div>
    }
    <button type="submit" class="btn btn-primary">Submit</button>
</form>